@model IEnumerable<ERP.Models.EquipmentType>

@{
    ViewData["Title"] = "Types d'équipements";
}

<h1>Types d'équipements</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nouveau type
    </a>
</p>

<div class="card">
<div class="table-responsive">
<table class="table mb-0">
    <thead>
        <tr>
            <th>Nom</th>
            <th class="d-none d-sm-table-cell">Catégorie</th>
            <th class="d-none d-lg-table-cell">Description</th>
            <th class="d-none d-md-table-cell">Durée de vie</th>
            <th class="d-none d-md-table-cell">Maintenance</th>
            <th class="d-none d-sm-table-cell">Nb éq.</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <strong>@item.Name</strong>
                    <span class="d-sm-none d-block">
                        @if (!string.IsNullOrEmpty(item.Category))
                        {
                            <span class="badge bg-info">@item.Category</span>
                        }
                        <span class="badge bg-primary">@(item.Equipments?.Count ?? 0) éq.</span>
                    </span>
                </td>
                <td class="d-none d-sm-table-cell">
                    @if (!string.IsNullOrEmpty(item.Category))
                    {
                        <span class="badge bg-info">@item.Category</span>
                    }
                </td>
                <td class="d-none d-lg-table-cell">@(item.Description?.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</td>
                <td class="d-none d-md-table-cell">@(item.EstimatedLifespanMonths?.ToString() ?? "-") mois</td>
                <td class="d-none d-md-table-cell">
                    @if (item.RequiresMaintenance)
                    {
                        <span class="badge bg-warning">Oui</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Non</span>
                    }
                </td>
                <td class="d-none d-sm-table-cell">
                    <span class="badge bg-primary">@(item.Equipments?.Count ?? 0)</span>
                </td>
                <td class="text-end">
                    <div class="btn-group btn-group-sm">
                        <a asp-action="Details" asp-route-id="@item.EquipmentTypeId" class="btn btn-secondary" title="Détails"><i class="bi bi-eye"></i></a>
                        <a asp-action="Edit" asp-route-id="@item.EquipmentTypeId" class="btn btn-secondary" title="Modifier"><i class="bi bi-pencil"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.EquipmentTypeId" class="btn btn-danger" title="Supprimer"><i class="bi bi-trash"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>
