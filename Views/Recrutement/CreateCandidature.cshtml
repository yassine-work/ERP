@model ERP.Models.Candidature
@{
    ViewData["Title"] = "Nouvelle candidature";
}

<div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom border-2">
    <div>
        <h1>Nouvelle candidature</h1>
        <p class="text-muted mb-0">Enregistrez une candidature pour une offre d'emploi</p>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="CreateCandidature" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="CandidatId" class="form-label"></label>
                        <select asp-for="CandidatId" class="form-select" asp-items="@(ViewBag.Candidats as SelectList)">
                            <option value="">-- Sélectionner un candidat --</option>
                        </select>
                        <span asp-validation-for="CandidatId" class="text-danger"></span>
                        <div class="mt-1">
                            <a asp-action="CreateCandidat" class="small">+ Créer un nouveau candidat</a>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="JobOfferId" class="form-label"></label>
                        <select asp-for="JobOfferId" class="form-select" asp-items="@(ViewBag.JobOffers as SelectList)">
                            <option value="">-- Sélectionner une offre --</option>
                        </select>
                        <span asp-validation-for="JobOfferId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LettreMotivation" class="form-label"></label>
                        <textarea asp-for="LettreMotivation" class="form-control" rows="5" placeholder="Résumé de la lettre de motivation..."></textarea>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="PretentionSalariale" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="PretentionSalariale" class="form-control" type="number" step="100" />
                            <span class="input-group-text">MAD</span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DateDisponibilite" class="form-label"></label>
                        <input asp-for="DateDisponibilite" class="form-control" type="date" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="NotesInternes" class="form-label"></label>
                        <textarea asp-for="NotesInternes" class="form-control" rows="3" placeholder="Notes internes sur la candidature..."></textarea>
                    </div>
                </div>
            </div>

            <hr>
            <div class="d-flex gap-2 flex-wrap">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg"></i> Enregistrer la candidature
                </button>
                <a asp-action="Candidatures" class="btn btn-secondary">Annuler</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
