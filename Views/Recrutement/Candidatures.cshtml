@model IEnumerable<ERP.Models.Candidature>
@{
    ViewData["Title"] = "Candidatures";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 pb-3 border-bottom border-2 gap-3">
    <div>
        <h1>Candidatures</h1>
        <p class="text-muted mb-0">Gérez les candidatures reçues</p>
    </div>
    <div class="d-flex gap-2 flex-wrap">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour
        </a>
        <a asp-action="CreateCandidature" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Nouvelle Candidature
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Filtrer par statut</label>
                <select name="status" class="form-select">
                    <option value="">Tous les statuts</option>
                    <optgroup label="Candidature">
                        <option value="Submitted" selected="@(Context.Request.Query["status"] == "Submitted")">Soumise</option>
                        <option value="UnderReview" selected="@(Context.Request.Query["status"] == "UnderReview")">En examen</option>
                        <option value="Interview" selected="@(Context.Request.Query["status"] == "Interview")">Entretien</option>
                    </optgroup>
                    <optgroup label="Décision">
                        <option value="Accepted" selected="@(Context.Request.Query["status"] == "Accepted")">Acceptée</option>
                        <option value="Rejected" selected="@(Context.Request.Query["status"] == "Rejected")">Rejetée</option>
                        <option value="Withdrawn" selected="@(Context.Request.Query["status"] == "Withdrawn")">Retirée</option>
                    </optgroup>
                    <optgroup label="Embauche">
                        <option value="OfferSent" selected="@(Context.Request.Query["status"] == "OfferSent")">Offre envoyée</option>
                        <option value="OfferAccepted" selected="@(Context.Request.Query["status"] == "OfferAccepted")">Offre acceptée</option>
                        <option value="PreBoarding" selected="@(Context.Request.Query["status"] == "PreBoarding")">Pré-boarding</option>
                        <option value="Employed" selected="@(Context.Request.Query["status"] == "Employed")">Embauché</option>
                    </optgroup>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Filtrer par offre</label>
                <select name="jobOfferId" class="form-select" asp-items="@(ViewBag.JobOffers as SelectList)">
                    <option value="">Toutes les offres</option>
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-funnel"></i> Filtrer
                </button>
            </div>
        </form>
    </div>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Candidat</th>
                    <th>Offre</th>
                    <th class="d-none d-md-table-cell">Date</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong>@item.Candidat?.NomComplet</strong>
                            <br><small class="text-muted">@item.Candidat?.Email</small>
                        </td>
                        <td>@item.JobOffer?.Title</td>
                        <td class="d-none d-md-table-cell">@item.DateCandidature.ToString("dd/MM/yyyy")</td>
                        <td>
                            @{
                                var statusClass = item.Status switch
                                {
                                    ERP.Models.CandidatureStatus.Accepted => "bg-success",
                                    ERP.Models.CandidatureStatus.Rejected => "bg-danger",
                                    ERP.Models.CandidatureStatus.Interview => "bg-info",
                                    ERP.Models.CandidatureStatus.OfferSent => "bg-primary",
                                    ERP.Models.CandidatureStatus.OfferAccepted => "bg-primary",
                                    ERP.Models.CandidatureStatus.OfferDeclined => "bg-danger",
                                    ERP.Models.CandidatureStatus.PreBoarding => "bg-warning text-dark",
                                    ERP.Models.CandidatureStatus.Employed => "bg-success",
                                    ERP.Models.CandidatureStatus.Withdrawn => "bg-secondary",
                                    _ => "bg-warning text-dark"
                                };
                                var statusText = item.Status switch
                                {
                                    ERP.Models.CandidatureStatus.Submitted => "Soumise",
                                    ERP.Models.CandidatureStatus.UnderReview => "En examen",
                                    ERP.Models.CandidatureStatus.Interview => "Entretien",
                                    ERP.Models.CandidatureStatus.Accepted => "Acceptée",
                                    ERP.Models.CandidatureStatus.Rejected => "Rejetée",
                                    ERP.Models.CandidatureStatus.Withdrawn => "Retirée",
                                    ERP.Models.CandidatureStatus.OfferSent => "Offre envoyée",
                                    ERP.Models.CandidatureStatus.OfferAccepted => "Offre acceptée",
                                    ERP.Models.CandidatureStatus.OfferDeclined => "Offre refusée",
                                    ERP.Models.CandidatureStatus.PreBoarding => "Pré-boarding",
                                    ERP.Models.CandidatureStatus.Employed => "✓ Embauché",
                                    _ => item.Status.ToString()
                                };
                            }
                            <span class="badge @statusClass">@statusText</span>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                @* Show Hiring Pipeline button for accepted candidates *@
                                @if (item.Status >= ERP.Models.CandidatureStatus.Accepted && 
                                     item.Status != ERP.Models.CandidatureStatus.Rejected &&
                                     item.Status != ERP.Models.CandidatureStatus.Withdrawn &&
                                     item.Status != ERP.Models.CandidatureStatus.OfferDeclined)
                                {
                                    <a asp-action="HiringPipeline" asp-route-id="@item.Id" class="btn btn-success" title="Pipeline d'embauche">
                                        <i class="bi bi-diagram-3"></i>
                                        @if (item.Status == ERP.Models.CandidatureStatus.Employed)
                                        {
                                            <span class="d-none d-lg-inline ms-1">Voir</span>
                                        }
                                        else
                                        {
                                            <span class="d-none d-lg-inline ms-1">Embaucher</span>
                                        }
                                    </a>
                                }
                                <a asp-action="EditCandidature" asp-route-id="@item.Id" class="btn btn-outline-secondary" title="Gérer">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <div class="btn-group btn-group-sm">
                                    <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" title="Changer statut">
                                        <i class="bi bi-arrow-repeat"></i>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <form asp-action="UpdateCandidatureStatus" asp-route-id="@item.Id" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="status" value="UnderReview" />
                                                <button type="submit" class="dropdown-item">En examen</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form asp-action="UpdateCandidatureStatus" asp-route-id="@item.Id" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="status" value="Interview" />
                                                <button type="submit" class="dropdown-item">Entretien</button>
                                            </form>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-action="UpdateCandidatureStatus" asp-route-id="@item.Id" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="status" value="Accepted" />
                                                <button type="submit" class="dropdown-item text-success">Accepter</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form asp-action="UpdateCandidatureStatus" asp-route-id="@item.Id" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="status" value="Rejected" />
                                                <button type="submit" class="dropdown-item text-danger">Rejeter</button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                                <form asp-action="DeleteCandidature" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Supprimer cette candidature ?')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-inbox display-1 text-muted"></i>
        <h3 class="mt-3">Aucune candidature</h3>
        <p class="text-muted">Les candidatures apparaîtront ici une fois soumises.</p>
        <a asp-action="CreateCandidature" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Ajouter une candidature
        </a>
    </div>
}
