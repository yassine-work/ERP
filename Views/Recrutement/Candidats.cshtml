@model IEnumerable<ERP.Models.Candidat>
@{
    ViewData["Title"] = "Candidats";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 pb-3 border-bottom border-2 gap-3">
    <div>
        <h1>Candidats</h1>
        <p class="text-muted mb-0">Base de données des candidats</p>
    </div>
    <div class="d-flex gap-2 flex-wrap">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour
        </a>
        <a asp-action="CreateCandidat" class="btn btn-primary">
            <i class="bi bi-person-plus"></i> Nouveau Candidat
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Search -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-6 col-lg-4">
                <label class="form-label">Rechercher</label>
                <input type="text" name="search" class="form-control" placeholder="Nom, prénom ou email..." value="@Context.Request.Query["search"]" />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i> Rechercher
                </button>
            </div>
        </form>
    </div>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th class="d-none d-md-table-cell">Email</th>
                    <th class="d-none d-lg-table-cell">Téléphone</th>
                    <th class="d-none d-lg-table-cell">Expérience</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong>@item.NomComplet</strong>
                            <span class="d-md-none"><br><small class="text-muted">@item.Email</small></span>
                        </td>
                        <td class="d-none d-md-table-cell">@item.Email</td>
                        <td class="d-none d-lg-table-cell">@(item.Telephone ?? "—")</td>
                        <td class="d-none d-lg-table-cell">
                            @if (item.AnneeExperience.HasValue)
                            {
                                @:@item.AnneeExperience ans
                            }
                            else
                            {
                                @:—
                            }
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="DetailsCandidat" asp-route-id="@item.Id" class="btn btn-outline-secondary" title="Détails">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="EditCandidat" asp-route-id="@item.Id" class="btn btn-outline-secondary" title="Modifier">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="CreateCandidature" asp-route-candidatId="@item.Id" class="btn btn-outline-success" title="Créer candidature">
                                    <i class="bi bi-plus-circle"></i>
                                </a>
                                <form asp-action="DeleteCandidat" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Supprimer ce candidat ?')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-people display-1 text-muted"></i>
        <h3 class="mt-3">Aucun candidat</h3>
        <p class="text-muted">Commencez par ajouter des candidats à votre base de données.</p>
        <a asp-action="CreateCandidat" class="btn btn-primary">
            <i class="bi bi-person-plus"></i> Ajouter un candidat
        </a>
    </div>
}
