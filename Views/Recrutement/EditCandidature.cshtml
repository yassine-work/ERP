@model ERP.Models.Candidature
@{
    ViewData["Title"] = "Gérer la candidature";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 pb-3 border-bottom border-2 gap-3">
    <div>
        <h1>Gérer la candidature</h1>
        <p class="text-muted mb-0">@Model.Candidat?.NomComplet — @Model.JobOffer?.Title</p>
    </div>
    <div class="d-flex gap-2 flex-wrap">
        <a asp-action="Candidatures" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header">Détails de la candidature</div>
            <div class="card-body">
                <form asp-action="EditCandidature" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CandidatId" />
                    <input type="hidden" asp-for="JobOfferId" />
                    <input type="hidden" asp-for="DateCandidature" />

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="label">Candidat</h6>
                            <p class="mb-1"><strong>@Model.Candidat?.NomComplet</strong></p>
                            <p class="mb-1 text-muted">@Model.Candidat?.Email</p>
                            @if (!string.IsNullOrEmpty(Model.Candidat?.Telephone))
                            {
                                <p class="mb-0 text-muted">@Model.Candidat.Telephone</p>
                            }
                        </div>
                        <div class="col-md-6">
                            <h6 class="label">Offre d'emploi</h6>
                            <p class="mb-1"><strong>@Model.JobOffer?.Title</strong></p>
                            <p class="mb-0 text-muted">@Model.JobOffer?.Department</p>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Status" class="form-label"></label>
                                <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<ERP.Models.CandidatureStatus>()"></select>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Score" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Score" class="form-control" type="number" min="0" max="100" />
                                    <span class="input-group-text">/ 100</span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="PretentionSalariale" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="PretentionSalariale" class="form-control" type="number" step="100" />
                                    <span class="input-group-text">MAD</span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="DateDisponibilite" class="form-label"></label>
                                <input asp-for="DateDisponibilite" class="form-control" type="date" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DateEntretien" class="form-label"></label>
                                <input asp-for="DateEntretien" class="form-control" type="datetime-local" />
                            </div>

                            <div class="mb-3">
                                <label asp-for="LettreMotivation" class="form-label"></label>
                                <textarea asp-for="LettreMotivation" class="form-control" rows="3"></textarea>
                            </div>

                            <div class="mb-3">
                                <label asp-for="RetourEntretien" class="form-label"></label>
                                <textarea asp-for="RetourEntretien" class="form-control" rows="3" placeholder="Notes sur l'entretien..."></textarea>
                            </div>

                            <div class="mb-3">
                                <label asp-for="NotesInternes" class="form-label"></label>
                                <textarea asp-for="NotesInternes" class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                    </div>

                    <hr>
                    <div class="d-flex gap-2 flex-wrap">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg"></i> Enregistrer
                        </button>
                        <a asp-action="Candidatures" class="btn btn-secondary">Annuler</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-header">Informations</div>
            <div class="card-body">
                <dl>
                    <dt>Date de candidature</dt>
                    <dd>@Model.DateCandidature.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt>Statut actuel</dt>
                    <dd>
                        @{
                            var statusClass = Model.Status switch
                            {
                                ERP.Models.CandidatureStatus.Accepted => "bg-success",
                                ERP.Models.CandidatureStatus.Rejected => "bg-danger",
                                ERP.Models.CandidatureStatus.Interview => "bg-info",
                                _ => "bg-warning text-dark"
                            };
                            var statusText = Model.Status switch
                            {
                                ERP.Models.CandidatureStatus.Submitted => "Soumise",
                                ERP.Models.CandidatureStatus.UnderReview => "En examen",
                                ERP.Models.CandidatureStatus.Interview => "Entretien",
                                ERP.Models.CandidatureStatus.Accepted => "Acceptée",
                                ERP.Models.CandidatureStatus.Rejected => "Rejetée",
                                ERP.Models.CandidatureStatus.Withdrawn => "Retirée",
                                _ => ""
                            };
                        }
                        <span class="badge @statusClass">@statusText</span>
                    </dd>

                    @if (Model.Score.HasValue)
                    {
                        <dt>Score</dt>
                        <dd>@Model.Score / 100</dd>
                    }

                    @if (Model.DateEntretien.HasValue)
                    {
                        <dt>Date d'entretien</dt>
                        <dd>@Model.DateEntretien.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                    }
                </dl>
            </div>
        </div>

        <div class="card">
            <div class="card-header">Actions rapides</div>
            <div class="card-body d-grid gap-2">
                @if (Model.Status != ERP.Models.CandidatureStatus.Accepted)
                {
                    <form asp-action="UpdateCandidatureStatus" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="status" value="Accepted" />
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Accepter
                        </button>
                    </form>
                }
                @if (Model.Status != ERP.Models.CandidatureStatus.Interview)
                {
                    <form asp-action="UpdateCandidatureStatus" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="status" value="Interview" />
                        <button type="submit" class="btn btn-info w-100">
                            <i class="bi bi-calendar-event"></i> Planifier entretien
                        </button>
                    </form>
                }
                @if (Model.Status != ERP.Models.CandidatureStatus.Rejected)
                {
                    <form asp-action="UpdateCandidatureStatus" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="status" value="Rejected" />
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <i class="bi bi-x-circle"></i> Rejeter
                        </button>
                    </form>
                }
                <hr>
                <form asp-action="DeleteCandidature" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Supprimer cette candidature ?')">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-danger w-100">
                        <i class="bi bi-trash"></i> Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
