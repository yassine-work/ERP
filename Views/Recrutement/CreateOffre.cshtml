@model ERP.Models.JobOffer
@{
    ViewData["Title"] = "Nouvelle offre d'emploi";
}

<div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom border-2">
    <div>
        <h1>Nouvelle offre d'emploi</h1>
        <p class="text-muted mb-0">Créez une nouvelle offre de recrutement</p>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="CreateOffre" method="post">
            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" placeholder="ex: Développeur Full Stack" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="5" placeholder="Décrivez le poste, les missions principales..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Requirements" class="form-label"></label>
                        <textarea asp-for="Requirements" class="form-control" rows="4" placeholder="Compétences requises, expérience, diplômes..."></textarea>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="PosteId" class="form-label">Poste associé</label>
                        <select asp-for="PosteId" class="form-select" asp-items="@(ViewBag.Postes as SelectList)">
                            <option value="">-- Sélectionner --</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Department" class="form-label"></label>
                        <input asp-for="Department" class="form-control" placeholder="ex: IT, RH, Finance" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Location" class="form-label"></label>
                        <input asp-for="Location" class="form-control" placeholder="ex: Paris, Remote" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="ContractType" class="form-label"></label>
                        <select asp-for="ContractType" class="form-select" asp-items="Html.GetEnumSelectList<ERP.Models.ContractType>()"></select>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <div class="mb-3">
                                <label asp-for="SalaryMin" class="form-label"></label>
                                <input asp-for="SalaryMin" class="form-control" type="number" step="100" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="mb-3">
                                <label asp-for="SalaryMax" class="form-label"></label>
                                <input asp-for="SalaryMax" class="form-control" type="number" step="100" />
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ClosingDate" class="form-label"></label>
                        <input asp-for="ClosingDate" class="form-control" type="date" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<ERP.Models.JobOfferStatus>()"></select>
                    </div>
                </div>
            </div>

            <hr>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg"></i> Créer l'offre
                </button>
                <a asp-action="Offres" class="btn btn-secondary">Annuler</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
