@model ERP.Models.JobOffer
@{
    ViewData["Title"] = Model.Title;
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 pb-3 border-bottom border-2 gap-3">
    <div>
        <h1>@Model.Title</h1>
        <p class="text-muted mb-0">
            <span class="badge @(Model.Status == ERP.Models.JobOfferStatus.Published ? "bg-success" : Model.Status == ERP.Models.JobOfferStatus.Draft ? "bg-warning text-dark" : "bg-secondary")">
                @Model.Status
            </span>
            @if (Model.Poste != null)
            {
                <span class="ms-2">@Model.Poste.Title</span>
            }
        </p>
    </div>
    <div class="d-flex gap-2 flex-wrap">
        <a asp-action="Offres" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour
        </a>
        <a asp-action="EditOffre" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Modifier
        </a>
        @if (Model.Status == ERP.Models.JobOfferStatus.Published)
        {
            <a asp-action="CreateCandidature" asp-route-jobOfferId="@Model.Id" class="btn btn-success">
                <i class="bi bi-person-plus"></i> Ajouter candidature
            </a>
        }
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header">Description du poste</div>
            <div class="card-body">
                <div class="mb-4">
                    <h6 class="label">Description</h6>
                    <p style="white-space: pre-line;">@Model.Description</p>
                </div>

                @if (!string.IsNullOrEmpty(Model.Requirements))
                {
                    <div>
                        <h6 class="label">Exigences & Qualifications</h6>
                        <p style="white-space: pre-line;">@Model.Requirements</p>
                    </div>
                }
            </div>
        </div>

        <!-- Candidatures for this offer -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Candidatures (@(Model.Candidatures?.Count ?? 0))</span>
                @if (Model.Status == ERP.Models.JobOfferStatus.Published)
                {
                    <a asp-action="CreateCandidature" asp-route-jobOfferId="@Model.Id" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus"></i> Ajouter
                    </a>
                }
            </div>
            <div class="card-body p-0">
                @if (Model.Candidatures != null && Model.Candidatures.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Candidat</th>
                                    <th class="d-none d-md-table-cell">Date</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var candidature in Model.Candidatures.OrderByDescending(c => c.DateCandidature))
                                {
                                    <tr>
                                        <td>
                                            <strong>@candidature.Candidat?.NomComplet</strong>
                                            <br><small class="text-muted">@candidature.Candidat?.Email</small>
                                        </td>
                                        <td class="d-none d-md-table-cell">@candidature.DateCandidature.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <span class="badge @(candidature.Status == ERP.Models.CandidatureStatus.Accepted ? "bg-success" : candidature.Status == ERP.Models.CandidatureStatus.Rejected ? "bg-danger" : candidature.Status == ERP.Models.CandidatureStatus.Interview ? "bg-info" : "bg-warning text-dark")">
                                                @candidature.Status
                                            </span>
                                        </td>
                                        <td>
                                            <a asp-action="EditCandidature" asp-route-id="@candidature.Id" class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4 text-muted">
                        <i class="bi bi-inbox display-4"></i>
                        <p class="mt-2">Aucune candidature pour cette offre</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-header">Informations</div>
            <div class="card-body">
                <dl>
                    <dt>Département</dt>
                    <dd>@(Model.Department ?? "—")</dd>

                    <dt>Lieu</dt>
                    <dd>@(Model.Location ?? "—")</dd>

                    <dt>Type de contrat</dt>
                    <dd><span class="badge bg-secondary">@Model.ContractType</span></dd>

                    @if (Model.SalaryMin.HasValue || Model.SalaryMax.HasValue)
                    {
                        <dt>Salaire</dt>
                        <dd>
                            @if (Model.SalaryMin.HasValue && Model.SalaryMax.HasValue)
                            {
                                @:@Model.SalaryMin.Value.ToString("N0") - @Model.SalaryMax.Value.ToString("N0") MAD
                            }
                            else if (Model.SalaryMin.HasValue)
                            {
                                @:À partir de @Model.SalaryMin.Value.ToString("N0") MAD
                            }
                            else
                            {
                                @:Jusqu'à @Model.SalaryMax!.Value.ToString("N0") MAD
                            }
                        </dd>
                    }

                    <dt>Date de création</dt>
                    <dd>@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>

                    @if (Model.PublishedDate.HasValue)
                    {
                        <dt>Date de publication</dt>
                        <dd>@Model.PublishedDate.Value.ToString("dd/MM/yyyy")</dd>
                    }

                    @if (Model.ClosingDate.HasValue)
                    {
                        <dt>Date limite</dt>
                        <dd>@Model.ClosingDate.Value.ToString("dd/MM/yyyy")</dd>
                    }
                </dl>
            </div>
        </div>

        <div class="card">
            <div class="card-header">Actions</div>
            <div class="card-body d-grid gap-2">
                @if (Model.Status == ERP.Models.JobOfferStatus.Draft)
                {
                    <form asp-action="PublishOffre" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-send"></i> Publier l'offre
                        </button>
                    </form>
                }
                @if (Model.Status == ERP.Models.JobOfferStatus.Published)
                {
                    <form asp-action="CloseOffre" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-warning w-100">
                            <i class="bi bi-x-circle"></i> Fermer l'offre
                        </button>
                    </form>
                }
                <form asp-action="DeleteOffre" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Supprimer cette offre et toutes ses candidatures ?')">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-danger w-100">
                        <i class="bi bi-trash"></i> Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
