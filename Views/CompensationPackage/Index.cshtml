@model IEnumerable<ERP.Models.Employe>

@{
    ViewData["Title"] = "Gestion des Rémunérations";
}

<h1>Gestion des Rémunérations</h1>
<p class="text-muted">Gérez les packages de compensation pour chaque employé.</p>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex gap-2 flex-wrap mb-3">
    <a asp-controller="AdvantageType" asp-action="Index" class="btn btn-outline-secondary">Types d'avantages</a>
    <a asp-controller="AllowanceType" asp-action="Index" class="btn btn-outline-secondary">Types d'allocations</a>
    <a asp-controller="BonusType" asp-action="Index" class="btn btn-outline-secondary">Types de bonus</a>
</div>

<div class="card">
<div class="table-responsive">
<table class="table mb-0">
    <thead>
        <tr>
            <th>Employé</th>
            <th class="d-none d-md-table-cell">Poste</th>
            <th class="d-none d-lg-table-cell">Date d'embauche</th>
            <th>Salaire actuel</th>
            <th class="d-none d-sm-table-cell">Statut</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            var activePackage = employee.CompensationPackages?.FirstOrDefault(p => p.IsActive);
            <tr>
                <td>
                    <a asp-controller="Employes" asp-action="Details" asp-route-id="@employee.Id">
                        @employee.Prenom @employee.Nom
                    </a>
                </td>
                <td class="d-none d-md-table-cell">
                    @if (employee.Poste != null)
                    {
                        <span>@employee.Poste.Title</span>
                        <br />
                        <small class="text-muted">@employee.Poste.Department</small>
                    }
                </td>
                <td class="d-none d-lg-table-cell">@employee.DateEmbauche.ToShortDateString()</td>
                <td>
                    @if (activePackage != null)
                    {
                        <strong>@activePackage.BaseSalary.ToString("C")</strong>
                    }
                    else
                    {
                        <span class="text-muted">Non défini</span>
                    }
                </td>
                <td class="d-none d-sm-table-cell">
                    @if (activePackage != null)
                    {
                        <span class="badge bg-success">Actif</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Sans package</span>
                    }
                </td>
                <td class="text-end">
                    <div class="btn-group btn-group-sm">
                        <a asp-action="Edit" asp-route-employeeId="@employee.Id" class="btn btn-secondary" title="Modifier">
                            <i class="bi bi-pencil"></i><span class="d-none d-lg-inline ms-1">Modifier</span>
                        </a>
                        <a asp-action="History" asp-route-employeeId="@employee.Id" class="btn btn-secondary" title="Historique">
                            <i class="bi bi-clock-history"></i><span class="d-none d-lg-inline ms-1">Historique</span>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Aucun employé trouvé. <a asp-controller="Employes" asp-action="Create">Créer un employé</a>
    </div>
}
