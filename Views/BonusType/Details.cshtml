@model ERP.Models.BonusType

@{
    ViewData["Title"] = "Bonus Type Details";
}

<div class="container mt-4">
    <h2>Bonus Type Details</h2>

    <div class="card mt-3">
        <div class="card-body">
            <h5 class="card-title">@Model.BonusTypeName</h5>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.BonusTypeId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>
