@model IEnumerable<ERP.Models.BonusType>

@{
    ViewData["Title"] = "Bonus Types";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Bonus Types</h2>
        <a asp-action="Create" class="btn btn-primary">+ New Bonus Type</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th style="width:180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BonusTypeName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.BonusTypeId" class="btn btn-sm btn-info">View</a>
                    <a asp-action="Edit" asp-route-id="@item.BonusTypeId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.BonusTypeId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
