@model ERP.Models.BonusType

@{
    ViewData["Title"] = "Edit Bonus Type";
}

<div class="container mt-4">
    <h2>Edit Bonus Type</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="BonusTypeId" />

        <div class="mb-3">
            <label asp-for="BonusTypeName" class="form-label"></label>
            <input asp-for="BonusTypeName" class="form-control" />
            <span asp-validation-for="BonusTypeName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-warning">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>
