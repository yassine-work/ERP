@model IEnumerable<ERP.Models.Employe>

@{
    ViewData["Title"] = "Résultats de recherche";
    var searchTerm = ViewBag.SearchTerm as string;
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Résultats pour: "@searchTerm"</h4>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nom Complet</th>
                        <th>Poste</th>
                        <th>Département</th>
                        <th>Email</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td><strong>@employee.Nom @employee.Prenom</strong></td>
                            <td>@employee.Poste.Title</td>
                            <td><span class="badge bg-info">@employee.Poste.Department</span></td>
                            <td>@employee.Email</td>
                            <td>
                                <a asp-action="EmployeeView" 
                                   asp-route-employeeId="@employee.Id" 
                                   class="btn btn-sm btn-primary">
                                    Sélectionner
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Nouvelle recherche
                </a>
            </div>
        </div>
    </div>
</div>