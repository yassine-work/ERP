<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<!-- Sandbox Timer Script -->
<script>
(function() {
    // Use server-provided remaining time (synced on every page load)
    let totalSeconds = window.sandboxRemainingSeconds || 1200;
    const sessionId = window.sandboxSessionId || 'unknown';
    
    // Store session info in localStorage to detect session changes
    const storedSession = localStorage.getItem('currentSandboxSession');
    if (storedSession && storedSession !== sessionId) {
        console.log('[Sandbox] Session changed from', storedSession, 'to', sessionId);
    }
    localStorage.setItem('currentSandboxSession', sessionId);
    
    console.log('[Sandbox] Timer initialized: ' + totalSeconds + 's remaining, session: ' + sessionId);
    
    function updateTimer() {
        const timerDisplay = document.getElementById('timerDisplay');
        const timerContainer = document.querySelector('.sandbox-timer');
        
        if (!timerDisplay || !timerContainer) return;
        
        if (totalSeconds <= 0) {
            timerDisplay.textContent = 'Session expirée';
            timerContainer.style.background = '#dc3545';
            localStorage.removeItem('currentSandboxSession');
            // Reload to get new session
            setTimeout(() => location.reload(), 2000);
            return;
        }
        
        const minutes = Math.floor(totalSeconds / 60);
        const seconds = totalSeconds % 60;
        timerDisplay.textContent = 
            `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        
        // Warning colors
        if (totalSeconds < 60) {
            timerContainer.style.background = '#dc3545';
        } else if (totalSeconds < 300) {
            timerContainer.style.background = '#fd7e14';
        }
        
        totalSeconds--;
        setTimeout(updateTimer, 1000);
    }
    
    // Start timer when DOM is ready
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', updateTimer);
    } else {
        updateTimer();
    }
})();
</script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>