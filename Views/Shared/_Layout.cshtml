<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] — Système RH</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css"/>
    <link rel="stylesheet" href="~/css/newsprint.css" asp-append-version="true"/>
    <style>
        .sandbox-banner {
            background: var(--newsprint-fg, #111111);
            color: var(--newsprint-bg, #F9F9F7);
            padding: 8px 0;
            text-align: center;
            font-size: 0.85rem;
            font-family: var(--font-sans, 'Inter', sans-serif);
            letter-spacing: 0.05em;
            position: sticky;
            top: 0;
            z-index: 1100;
            border-bottom: 2px solid var(--newsprint-fg, #111111);
        }
        .sandbox-banner i { margin-right: 6px; }
        .sandbox-timer {
            background: var(--newsprint-accent, #CC0000);
            color: var(--newsprint-bg, #F9F9F7);
            padding: 2px 10px;
            border-radius: 0;
            margin-left: 10px;
            font-weight: 600;
            font-family: var(--font-mono, 'JetBrains Mono', monospace);
        }
        body { padding-top: 0 !important; }
    </style>
</head>
<body>

<!-- Sandbox Mode Banner -->
@{
    var timeRemaining = Context.Items["SandboxTimeRemaining"] as TimeSpan?;
    var remainingSeconds = timeRemaining.HasValue ? (int)timeRemaining.Value.TotalSeconds : 1200;
    var sessionId = Context.Items["SandboxSessionId"] as string ?? "unknown";
    var shortSessionId = sessionId.Length > 12 ? sessionId.Substring(sessionId.Length - 8) : sessionId;
}
<div class="sandbox-banner">
    <i class="bi bi-flask"></i>
    <strong>Mode Démo</strong> — Vos modifications sont temporaires et isolées.
    <span class="sandbox-timer" id="sandboxTimer" title="Session: @shortSessionId">
        <i class="bi bi-clock"></i> <span id="timerDisplay">--:--</span>
    </span>
</div>
<script>
    // Server-provided remaining seconds (synced on every page load)
    window.sandboxRemainingSeconds = @remainingSeconds;
    window.sandboxSessionId = "@shortSessionId";
</script>

