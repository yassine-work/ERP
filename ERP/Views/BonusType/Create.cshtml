@model ERP.Models.BonusType

@{
    ViewData["Title"] = "Create Bonus Type";
}

<div class="container mt-4">
    <h2>Create Bonus Type</h2>

    <form asp-action="Create" method="post" class="mt-3">
        <div class="mb-3">
            <label asp-for="BonusTypeName" class="form-label"></label>
            <input asp-for="BonusTypeName" class="form-control" />
            <span asp-validation-for="BonusTypeName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>
