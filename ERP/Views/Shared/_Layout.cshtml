<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] — Système RH</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css"/>
    <link rel="stylesheet" href="~/css/newsprint.css" asp-append-version="true"/>
</head>
<body>

<header>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                Système RH
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <i class="bi bi-list"></i>
            </button>
            <div class="navbar-collapse collapse d-lg-inline-flex">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            Accueil
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            Employés
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Employes" asp-action="Index">Liste des employés</a></li>
                            <li><a class="dropdown-item" asp-controller="Employes" asp-action="Create">Nouvel employé</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="Poste" asp-action="Index">Gérer les postes</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            Rémunérations
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Paie" asp-action="Index">Paie & Avantages</a></li>
                            <li><a class="dropdown-item" asp-controller="CompensationPackage" asp-action="Index">Packages</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="AdvantageType" asp-action="Index">Types d'avantages</a></li>
                            <li><a class="dropdown-item" asp-controller="AllowanceType" asp-action="Index">Types d'allocations</a></li>
                            <li><a class="dropdown-item" asp-controller="BonusType" asp-action="Index">Types de bonus</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            Équipements
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Equipment" asp-action="Index">Liste des équipements</a></li>
                            <li><a class="dropdown-item" asp-controller="Equipment" asp-action="Create">Nouvel équipement</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="EquipmentType" asp-action="Index">Types d'équipements</a></li>
                            <li><a class="dropdown-item" asp-controller="EquipmentAssignment" asp-action="Index">Historique des attributions</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            Recrutement
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Recrutement" asp-action="Index">Tableau de bord</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="Recrutement" asp-action="Offres">Offres d'emploi</a></li>
                            <li><a class="dropdown-item" asp-controller="Recrutement" asp-action="CreateOffre">Nouvelle offre</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="Recrutement" asp-action="Candidats">Candidats</a></li>
                            <li><a class="dropdown-item" asp-controller="Recrutement" asp-action="Candidatures">Candidatures</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container py-4">
    <main role="main">
        @RenderBody()
    </main>
</div>

<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <span class="label">&copy; @DateTime.Now.Year Système de Gestion RH</span>
            </div>
            <div class="col-md-6 text-md-end">
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Confidentialité</a>
            </div>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>