@model ERP.Models.Equipment

@{
    ViewData["Title"] = "Modifier l'équipement";
    var equipmentTypes = ViewBag.EquipmentTypes as List<ERP.Models.EquipmentType>;
}

<h1>Modifier l'équipement</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EquipmentId" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="EquipmentTypeId" class="control-label"></label>
                        <select asp-for="EquipmentTypeId" class="form-select" asp-items="@(new SelectList(equipmentTypes, "EquipmentTypeId", "Name"))">
                            <option value="">-- Sélectionner un type --</option>
                        </select>
                        <span asp-validation-for="EquipmentTypeId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="SerialNumber" class="control-label"></label>
                        <input asp-for="SerialNumber" class="form-control" />
                        <span asp-validation-for="SerialNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="InventoryCode" class="control-label"></label>
                        <input asp-for="InventoryCode" class="form-control" />
                        <span asp-validation-for="InventoryCode" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Brand" class="control-label"></label>
                        <input asp-for="Brand" class="form-control" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Model" class="control-label"></label>
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="AcquisitionDate" class="control-label"></label>
                        <input asp-for="AcquisitionDate" class="form-control" type="date" />
                        <span asp-validation-for="AcquisitionDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="PurchasePrice" class="control-label"></label>
                        <input asp-for="PurchasePrice" class="form-control" type="number" step="0.01" min="0" />
                        <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="WarrantyEndDate" class="control-label"></label>
                        <input asp-for="WarrantyEndDate" class="form-control" type="date" />
                        <span asp-validation-for="WarrantyEndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Supplier" class="control-label"></label>
                        <input asp-for="Supplier" class="form-control" />
                        <span asp-validation-for="Supplier" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Status" class="control-label"></label>
                        <select asp-for="Status" class="form-select">
                            <option value="@ERP.Models.EquipmentStatus.Available">Disponible</option>
                            <option value="@ERP.Models.EquipmentStatus.Assigned">Attribué</option>
                            <option value="@ERP.Models.EquipmentStatus.InMaintenance">En maintenance</option>
                            <option value="@ERP.Models.EquipmentStatus.Retired">Retiré</option>
                            <option value="@ERP.Models.EquipmentStatus.Lost">Perdu</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Annuler</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
