@model ERP.Models.AllowanceType

@{
    ViewData["Title"] = "Create Allowance Type";
}

<div class="container mt-4">
    <h2>Create Allowance Type</h2>

    <form asp-action="Create" method="post" class="mt-3">
        <div class="mb-3">
            <label asp-for="AllowanceTypeName" class="form-label"></label>
            <input asp-for="AllowanceTypeName" class="form-control" />
            <span asp-validation-for="AllowanceTypeName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>
