@model ERP.Models.AllowanceType

@{
    ViewData["Title"] = "Delete Allowance Type";
}

<div class="container mt-4">
    <h2 class="text-danger">Delete Allowance Type</h2>

    <div class="alert alert-warning mt-3">
        Are you sure you want to delete this allowance type?
    </div>

    <div class="card">
        <div class="card-body">
            <strong>@Model.AllowanceTypeName</strong>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="AllowanceTypeId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
